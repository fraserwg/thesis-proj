  shorttitle = {Mixing and {{Transformation}} in a {{Deep Western Boundary Current}}},
  author = {Spingys, Carl P. and Garabato, Alberto C. Naveira and Legg, Sonya and Polzin, Kurt L. and Abrahamsen, E. Povl and Buckingham, Christian E. and Forryan, Alexander and {Frajka-Williams}, Eleanor E.},
