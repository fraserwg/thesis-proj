@article{silvaCirculationThermoclineSalinity2009,
  title = {Circulation of the Thermocline Salinity Maximum Waters off the {{Northern Brazil}} as Inferred from in Situ Measurements and Numerical Results},
  author = {Silva, A.C. and Bourles, B. and Araujo, M.},
