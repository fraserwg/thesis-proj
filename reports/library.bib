@article{Spall2016,
  title = {Downfront {{Winds}} over {{Buoyant Coastal Plumes}}},
  author = {Spall, Michael A. and Thomas, Leif N.},
  year = {2016},
  month = oct,
  journal = {Journal of Physical Oceanography},
  volume = {46},
